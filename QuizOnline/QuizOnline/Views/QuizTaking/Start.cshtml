@model QuizOnline.Models.Quiz

@{
    ViewData["Title"] = "Rozwiąż Quiz";
}

<h1>@Model.Title</h1>
<hr />

<form asp-action="SubmitQuiz" method="post">
    <input type="hidden" name="quizId" value="@Model.Id" />

    @foreach (var question in Model.Questions)
    {
        <div class="mb-4">
            <h4>@question.Text</h4>
            @foreach (var answer in question.Answers)
            {
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="selectedAnswers[@question.Id]" id="answer-@answer.Id" value="@answer.Id" required>
                    <label class="form-check-label" for="answer-@answer.Id">
                        @answer.Text
                    </label>
                </div>
            }
        </div>
    }

    <div class="form-group">
        <input type="submit" value="Zakończ i sprawdź wyniki" class="btn btn-success" />
    </div>
</form>