@model IEnumerable<QuizOnline.Models.Quiz>

@{
    ViewData["Title"] = "Moje Quizy";
}

<h1>Moje Quizy</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Stwórz nowy quiz</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Tytuł
            </th>
            <th>
                Opis
            </th>
            <th class="text-end">Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td class="text-end">
                    @if (item.Questions.Any())
                    {
                        <a asp-controller="QuizTaking" asp-action="Start" asp-route-id="@item.Id" class="btn btn-sm btn-success">Rozwiąż</a>
                    }
                    else
                    {
                        <button class="btn btn-sm btn-success" disabled>Rozwiąż</button>
                    }

                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Zarządzaj</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edytuj</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>